<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Reset Password</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <% if (resetStatus != 'success') { %>
    <p>Please insert your new password twice</p>
    <hr>
    <!-- RESET PASSWORD FORM -->
    <form action="/resetPassword/<%= permalink %>/<%= token %>" method="post">
        <div class="form-group">
            <label>New Password</label>
            <input type="password" class="form-control" name="passwordOne" required="required">
        </div>

        <div class="form-group">
            <label>Confirm New Password</label>
            <input type="password" class="form-control" name="passwordTwo" required="required">
        </div>

        <input type="hidden" name="permalink" value="<%= permalink %>">
        <input type="hidden" name="token" value="<%= token %>">

        <button type="submit" class="btn btn-warning btn-lg">Reset Password</button>
    </form>

    <hr>

    <p>Or go <a href="/">home</a>.</p>


    <% } else { %>
    
    <p>You can now <a href="/login">login</a></p>
    <p>Or go <a href="/">home</a>.</p>
    <% } %>    

</div>
</div>
</body>
</html>
