<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
        <link rel="stylesheet" href="awesomplete.css" />
    <script src="awesomplete.js" ></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>

</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Submit game</h1>

    <% if (message.length > 0) { %>
        <% if (type == 1) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } else { %>
        <div class="alert alert-success fade in"><%= message %></div>
        <% } %>
    <% } %>



    <!-- LOGIN FORM -->
    <form action="/upload" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="title">
            <br>
            <label>Description</label>
            <textarea class="form-control" name="Text1" rows="5"></textarea>
            <br><label>Developer</label>
            <input type="text" class="form-control" name="developer">
            <br><label>Repository</label>
            <br>Adding a repository will automatically tag the game as Open Source
            <input type="text" class="form-control" name="repository">
            
            <br> <label>Tags</label>
            <br>
            <input id="tags" name="tags" type="text" class="form-control" data-list="Open Source, RPG, Arcade, Platform" data-multiple />
            <br>
            <br> <label>Screenshots</label>
            <input id="filePick1" type="file" multiple name="screenshots" onchange="handleSS(this)">
            <br>
            <br> <label>Game Files</label>
            <input id="filePick2" type="file" multiple name="gamefiles" onchange="handleFiles(this)">
            <br>
            <div id="fdesc"></div>
            <br>
            <button class="btn btn-warning btn-lg">Upload</button>


        </div>
      </form>


        
    <hr>
</div>
</div>
<script src="upload.js" type="text/javascript"></script>
</body>
</html>
